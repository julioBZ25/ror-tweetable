<div id="<%= dom_id tweet %>" class="tweet--card--container">
    <div class="avatar--container">
      <% if tweet.user.avatar.attached? %>
        <%= image_tag tweet.user.avatar, alt: "Tweet avatar", class: "avatar" %>
      <% end %>
    </div>
    <div>
      <div class="tweet--content">
        <div class="header--tweet">
          <h4 class="username--title">
            <%= tweet.user.name %>
          </h4>
          <p class="text-sm">
            <% # link_to user_path(tweet.user), class: "username", class: 'link_to' do %>
              @<%= tweet.user.username %>
            <% # end %>
          </p>
        </div>
        <div style="text-overflow: ellipsis">
          <%= link_to tweet.body, tweet, class: 'text-sm tweet--body' %>
        </div>
      </div>
      <footer class="tweet--footer">
        <div class="comment--container">
          <div class="comment--button">
            <%= link_to tweet_path(tweet) do%>
              <svg width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg">
